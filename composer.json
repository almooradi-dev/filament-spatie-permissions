{
    "name": "almooradi/filament-spatie-permissions",
    "description": "Add spatie permissions resources to filament app",
    "keywords": [
        "filament",
        "laravel",
        "filament-spatie-permissions",
        "spatie-permissions",
        "roles-permissions",
        "access-control"
    ],
    "autoload": {
        "psr-4": {
            "Almooradi\\FilamentSpatiePermissions\\": "src/",
            "Almooradi\\FilamentSpatiePermissions\\Database\\": "database/"
        }
    },
    "authors": [
        {
            "name": "Al Mooradi",
            "email": "dev@almooradi.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "filament/filament": "^2.15 || ^3.0",
        "spatie/laravel-package-tools": "^1.13.5",
        "illuminate/contracts": "^9.0 || ^10.0",
        "spatie/laravel-permission": "^5.9.1"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Almooradi\\FilamentSpatiePermissions\\FilamentSpatiePermissionsServiceProvider"
            ]
        }
    }
}
